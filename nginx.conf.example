# Nginx 配置示例
# 部署到 /etc/nginx/sites-available/rongzao
# 然后创建软链接: sudo ln -s /etc/nginx/sites-available/rongzao /etc/nginx/sites-enabled/
# 最后重启 Nginx: sudo systemctl restart nginx

server {
    listen 80;
    server_name your-domain.com;  # 替换为你的域名或服务器 IP

    # 设置客户端最大上传大小
    client_max_body_size 20M;

    # 日志配置
    access_log /var/log/nginx/rongzao_access.log;
    error_log /var/log/nginx/rongzao_error.log;

    # 反向代理到 Flask 应用
    location / {
        proxy_pass http://127.0.0.1:5001;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # 超时设置
        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
    }

    # 静态文件直接由 Nginx 提供
    location /static {
        alias /path/to/rongzao_server/static;  # 替换为实际路径
        expires 30d;
        add_header Cache-Control "public, immutable";
    }

    # 安全头
    add_header X-Frame-Options "SAMEORIGIN";
    add_header X-Content-Type-Options "nosniff";
    add_header X-XSS-Protection "1; mode=block";
}

